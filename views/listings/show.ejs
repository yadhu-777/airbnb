<% layout("../layout/boilerplate.ejs") %>
<body>
  
    <div class="row ">
     <div class="col offset-3">
   
      <div class="card   mb-3 " >
        <img src="<%=info.image.url%>" class="card-img-top mb-2" alt="listings-image">
        <div class="card-body">
          <p class="card-text"><%=info.title%></p>
          <p>â‚¹<%=info.price%>/night</p>
          <p><%=info.description%></p>
          <p><%=info.location%></p>
          <p><%=info.country%></p>
        </div>
        
      </div>
     </div>
   
  </div>
  
    <div class="row ">
      <div class="col-1 offset-3  mb-3">
        <form method="POST" action="/listings/<%=info._id%>/edit">
          <button class="btn btn-primary me-1 ">Edit</button>
        </form>
        <div class="col-2 mt-3">
        <form method="POST" action="/listings/<%=info._id%>?_method=DELETE">
          <button class="btn btn-danger">Delete</button>
        </form></div>
      </div>
      
      
    </div>  
   
    <h2 class="offset-3">Leave A Review</h2>
    <form method="POST" action="/listings/<%=info._id%>/review">
        <div class="col offset-3 ">
            <label class="form-label mt-2" for="rating">Rating</label>
            <input name="review[rating]" min="1" max="5" type="range" id="rating">
        </div>
        <div class="col-6 offset-3">
            <label class="form-label" for="comment">Comment</label>
            <textarea class="form-control" name="review[comment]" id="Comment"></textarea>
            <button class="btn btn-danger mt-3">Add</button>
        </div>
        
    </form>

    
    

    <div class="row row-cols-lg-2 row-cols-md-2 row-cols-sm-1">
      <h4 class="col-6 offset-3 mt-4">All Reviews</h4>
      
       <% for (let review of info.reviews) { %>
        
      
            <div class="card col-4 offset-3" width:13rem;>
              <div class="card-body ">
                <h5 class="card-title">yadhu </h5>
                <p class="card-text"> <%=review.comment %></p>
                <p class="card-text"><%= review.rating %> Stars</p>
              </div>
                <form method="POST" action="/listings/<%=info._id%>/review/<%=review._id%>?_method=DELETE">
                  <button class="btn btn-danger">delete</button>
                </form>
            </div>
         
            
          </div>
        
       <% } %>
      
     
    </div>
   
  
  
  
  
</body>

